<!--pages/addtest/addtest.wxml-->


<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="">
    <view class="">题目</view>
    <input name="question" placeholder="题目内容" />
  </view>
  <view class="">
    <view class="">选项1</view>
    <input name="slTip1" placeholder="选项值" value='{{slTip1}}'/>
    <input name="slContent1" placeholder="选项内容" />
  </view>

  <view class="">
    <view class="">选项2</view>
    <input name="slTip2" placeholder="选项值" value='{{slTip2}}'/>
    <input name="slContent2" placeholder="选项内容" />
  </view>

  <view class="">
    <view class="">选项3</view>
    <input name="slTip3" placeholder="选项值" value='{{slTip3}}'/>
    <input name="slContent3" placeholder="选项内容" />
  </view>

  <view class="">
    <view class="">选项4</view>
    <input name="slTip4" placeholder="选项值" value='{{slTip4}}'/>
    <input name="slContent4" placeholder="选项内容" />
  </view>

  <view class="">
    <view class="">正确选项</view>
    <input name="rightSelect" placeholder="正确选项值" />
  </view>

  <view class="btn-area">
    <button form-type="submit">Submit</button>
    <button form-type="reset">Reset</button>
  </view>
</form>
